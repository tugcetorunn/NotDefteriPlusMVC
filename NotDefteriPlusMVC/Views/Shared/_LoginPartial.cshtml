@if (User.Identity.Name != null)
{
    <span>Hoşgeldin @User.Identity.Name</span>
    <br />

    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout" style="width:200px">Çıkış</a>
}
else
{
    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login" style="width:200px">Giriş Yap</a>

    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register" style="width:200px">Kayıt Ol</a>
}
